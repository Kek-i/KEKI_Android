<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/very_light_pink"/>
            <corners android:radius="@dimen/my_page_switch_track_radius"/>
            <size
                android:width="@dimen/my_page_switch_track_width"
                android:height="@dimen/my_page_switch_track_height"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/my_page_switch_track_radius"/>
            <solid
                android:color="@color/switch_unchecked_track"/>
            <size
                android:width="@dimen/my_page_switch_track_width"
                android:height="@dimen/my_page_switch_track_height"/>
        </shape>
    </item>
</selector>