<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_back_logo_marginStart"
            android:layout_marginTop="@dimen/edit_back_logo_marginTop"
            android:src="@drawable/ic_chevron_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_layoutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/edit_title_marginLeft"
            android:layout_marginTop="@dimen/edit_title_marginTop"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="@string/seller_order_history_title"
            android:textColor="@color/black"
            android:textSize="@dimen/edit_layout_title_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_check_btn_marginTop"
            android:layout_marginRight="@dimen/edit_check_btn_marginRight"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:text="@string/btn_check"
            android:textColor="@color/black"
            android:textSize="@dimen/edit_check_btn_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seller_order_history_status"
            android:fontFamily="@font/notosanskr_bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="14dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cls_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_status">

            <ImageView
                android:id="@+id/iv_wating_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wating_order_no_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문 대기"
                android:textSize="11sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/iv_wating_order"
                app:layout_constraintStart_toStartOf="@id/iv_wating_order"
                app:layout_constraintEnd_toEndOf="@id/iv_wating_order"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_state_bar_no_color"
                app:layout_constraintStart_toEndOf="@id/iv_wating_order"
                app:layout_constraintEnd_toStartOf="@id/iv_making"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iv_making"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:src="@drawable/making_no_color"
                app:layout_constraintStart_toEndOf="@id/iv_wating_order"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제작 중"
                android:textSize="11sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/iv_making"
                app:layout_constraintStart_toStartOf="@id/iv_making"
                app:layout_constraintEnd_toEndOf="@id/iv_making"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_state_bar_no_color"
                app:layout_constraintStart_toEndOf="@id/iv_making"
                app:layout_constraintEnd_toStartOf="@id/iv_wating_pickup"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iv_wating_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:src="@drawable/wating_pickup_no_color"
                app:layout_constraintStart_toEndOf="@id/iv_making"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="픽업 대기"
                android:textSize="11sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/iv_wating_pickup"
                app:layout_constraintStart_toStartOf="@id/iv_wating_pickup"
                app:layout_constraintEnd_toEndOf="@id/iv_wating_pickup"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_state_bar_no_color"
                app:layout_constraintStart_toEndOf="@id/iv_wating_pickup"
                app:layout_constraintEnd_toStartOf="@id/iv_complete_pickup"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iv_complete_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:src="@drawable/complete_pickup_no_color"
                app:layout_constraintStart_toEndOf="@id/iv_wating_pickup"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="픽업 완료"
                android:textSize="11sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/iv_complete_pickup"
                app:layout_constraintStart_toStartOf="@id/iv_complete_pickup"
                app:layout_constraintEnd_toEndOf="@id/iv_complete_pickup"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cls_order_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cls_order_status">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="571dp"
                android:src="@drawable/order_history_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brown_grey"
                android:text="2023.12.31"
                android:textSize="11sp"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="원 딸기 케이크"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_date"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_design_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="디자인 추가 내용"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

            <TextView
                android:id="@+id/tv_design_add_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="레터링 추가\n색상 변경\n숫자 초 추가"
                android:textColor="@color/brown_grey"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_design_add"
                android:singleLine="false"/>

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="주문 금액"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_design_add_content" />

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="상품 금액"
                android:textColor="@color/brown_grey"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_price"
                android:singleLine="false"/>

            <TextView
                android:id="@+id/tv_product_price_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="27,000 원"
                android:textColor="@color/brown_grey"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_price"
                android:singleLine="false"/>

            <TextView
                android:id="@+id/tv_extra_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="추가 금액"
                android:textColor="@color/brown_grey"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_product_price"
                android:singleLine="false"/>

            <TextView
                android:id="@+id/tv_extra_price_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="3,000 원"
                android:textColor="@color/brown_grey"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_product_price"
                android:singleLine="false"/>

            <ImageView
                android:id="@+id/iv_division"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/order_history_division_line"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@id/tv_extra_price"/>

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="36dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="최종 금액"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_division" />

            <TextView
                android:id="@+id/tv_total_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="36dp"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="30,000 원"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_division" />

            <ImageView
                android:id="@+id/iv_division2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/order_history_division_line"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@id/tv_total"/>

            <TextView
                android:id="@+id/tv_pickup_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="44dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="픽업 요청일"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_division2" />

            <TextView
                android:id="@+id/tv_pickup_date_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="36dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="2023.12.31 | 16:30 PM"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_division2" />

            <TextView
                android:id="@+id/tv_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="44dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="요청 사항"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_pickup_date" />

            <TextView
                android:id="@+id/tv_request_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="케이크는 무설탕으로 해주시고 초코빵 베이스로 부탁드립니다."
                android:textColor="@color/brown_grey"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_request"
                android:singleLine="false"/>

            <TextView
                android:id="@+id/tv_request_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="44dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="첨부 사진"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_request_content" />

            <ImageView
                android:id="@+id/iv_request_img"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:src="@drawable/bg_rectangle_radius_10_off_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_request_img"/>

            <ImageView
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:src="@drawable/bg_rectangle_radius_10_off_white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/iv_request_img"
                app:layout_constraintTop_toBottomOf="@+id/tv_request_img"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cls_order_content"
            android:elevation="15dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="162dp"
                android:src="@drawable/order_history_back_sm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_consumer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="주문자 정보"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginRight="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_message_grey" />

            <TextView
                android:id="@+id/tv_consumer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="성    함"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_consumer"/>

            <TextView
                android:id="@+id/tv_consumer_name_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="김 예 림"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_consumer"/>

            <TextView
                android:id="@+id/tv_consumer_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="연락처"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_consumer_name"/>

            <TextView
                android:id="@+id/tv_consumer_contact_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:includeFontPadding="false"
                android:text="010-1234-5678"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_consumer_name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>