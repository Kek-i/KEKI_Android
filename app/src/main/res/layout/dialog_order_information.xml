<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_order_information"
        android:layout_width="@dimen/order_information_dialog_width"
        android:layout_height="@dimen/order_information_dialog_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_rectangle_radius_20_white_no_padding"
        android:elevation="@dimen/order_information_dialog_elevation">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/order_information_img_del_width_height"
            android:layout_height="@dimen/order_information_img_del_width_height"
            android:src="@drawable/drawable_delete_ic_resize"
            android:tint="@color/dialog_del"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/order_information_img_del_margin_top_right"
            android:layout_marginRight="@dimen/order_information_img_del_margin_top_right"/>

        <TextView
            android:id="@+id/tv_order_information_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/order_information_tv_title_height"
            android:layout_marginTop="@dimen/order_information_tv_title_margin_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/dialog_order_information_title"
            android:textColor="@color/black"
            android:textSize="@dimen/order_information_tv_title_size"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            />

        <TextView
            android:id="@+id/tv_order_information_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/order_information_tv_content_margin_top"
            app:layout_constraintTop_toBottomOf="@id/tv_order_information_dialog_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/order_information_tv_content"
            android:textColor="@color/black"
            android:textSize="@dimen/order_information_tv_content_size"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:textAlignment="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>