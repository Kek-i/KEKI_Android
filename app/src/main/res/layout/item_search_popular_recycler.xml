<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/search_tag_margin">

    <TextView
        android:id="@+id/tv_popular_search_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_tag_height"
        android:background="@drawable/bg_rectangle_radius_13_light_peach_1"
        android:text="#popular"
        android:textColor="@color/black"
        android:textSize="@dimen/search_tag_textSize"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanskr_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>