<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkish_pink</item>
        <item name="colorAccent">@color/pale_salmon</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:datePickerStyle">@style/DatePickerSetting</item>
        <item name="chipStyle">@style/CustomChipStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:datePickerStyle">@style/DatePickerSetting</item>
        <item name="chipStyle">@style/CustomChipStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkish_pink</item>
        <item name="colorAccent">@color/pale_salmon</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DatePickerSetting" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:padding">@dimen/date_picker_padding</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">@dimen/chip_hashtag_radius</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipMinTouchTargetSize">@dimen/chip_hashtag_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/chip_hashtag_height</item>
        <item name="android:paddingTop">@dimen/chip_hashtag_padding_top</item>
        <item name="android:paddingBottom">@dimen/chip_hashtag_padding_bottom</item>
        <item name="android:textAppearance">@style/ChipFontStyle</item>
        <item name="textStartPadding">@dimen/chip_text_padding_horizontal</item>
        <item name="textEndPadding">@dimen/chip_text_padding_horizontal</item>
        <item name="chipStartPadding">@dimen/chip_padding_horizontal</item>
        <item name="chipEndPadding">@dimen/chip_padding_horizontal</item>
        <item name="android:elevation">@dimen/calendar_add_hashtag_elevation</item>
    </style>

    <style name="ChipFontStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/calendar_tv_hashtag_size</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>